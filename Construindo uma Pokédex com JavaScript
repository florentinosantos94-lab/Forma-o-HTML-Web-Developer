// Função para filtrar os Pokémon por nome na Pokédex
function filterPokemonByName(pokemonList, searchTerm) {
    return pokemonList.filter(pokemon => pokemon.name.toLowerCase().includes(searchTerm.toLowerCase()));
}

// Exemplo: Filtrar e exibir os dados dos Pokémon cujo nome contenha "pikachu"
getPokemonData(25)
    .then(data => {
        showPokemonDataWithAnimations(data);
    })
    .catch(error => {
        console.error('Erro ao obter dados do Pokémon:', error);
    });

// Exemplo de uso do filtro de busca por nome
const pokemonList = ['pikachu', 'bulbasaur', 'charmander', 'squirtle', 'eevee'];
const filteredPokemon = filterPokemonByName(pokemonList, 'char');
console.log(filteredPokemon);
